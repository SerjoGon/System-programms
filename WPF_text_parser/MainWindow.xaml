<Window x:Class="WPF_text_parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_text_parser"
        mc:Ignorable="d"
        Title="Поиск по текстовому файлу" Height="450" Width="700" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="355,10,0,0" VerticalAlignment="Top" Click="Button_Click" />
        <TextBox HorizontalAlignment="Left" Margin="355,44,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <DockPanel LastChildFill="False" Margin="0,0,350,0">
            <TreeView x:Name="FolderTree" Width="349"/>
        </DockPanel>
        <RichTextBox x:Name="rtb_1" Margin="350,107,0,0">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
